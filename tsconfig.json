{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@config/*": ["src/config/*"],
			"@controllers/*": ["src/controllers/*"],
			"@middleware/*": ["src/middleware/*"],
			"@models/*": ["src/models/*"],
			"@routes/*": ["src/routes/*"],
			"@services/*": ["src/services/*"],
			"@utils/*": ["src/utils/*"],
			"@types/*": ["src/types/*"]
		},
		"rootDir": "src",
		"outDir": "dist",
		"module": "CommonJS",
		"target": "ES2020",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
